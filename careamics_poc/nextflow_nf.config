/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    CAREamics Nextflow config file
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Default config options for all compute environments
----------------------------------------------------------------------------------------
*/

// Global default params, used in configs

params {

    // Base paths
    basepath = '/lustre1/scratch/348/vsc34840'
    envpath= '/data/leuven/348/vsc34840/miniconda3/envs'
    scratch_base = '/lustre1/scratch/348/vsc34840'
    basepath_wsl='/home/tatiana/'
    
    // Input/output to change  the basepath saccording to where you run the pipeline
    input_dir = "${params.basepath}/Anneke/mini_d2"
    outdir = "${params.basepath}/Anneke/results_d2"
    input_csv="${params.basepath}/test_careamics/input_n2v.csv"
    train_path = "${params.basepath}/test_careamics/train_dataset"
    val_path = "${params.basepath}/test_careamics/val_dataset"'
    output_path = "${params.basepath}/test_careamics/results"
    test_path = "${params.basepath}/test_careamics/test_dataset/"

    // nf-core/configs integration
    custom_config_version = 'master'
    custom_config_base = "https://raw.githubusercontent.com/nf-core/configs/${params.custom_config_version}"
    trace_report_suffix          = new java.util.Date().format( 'yyyy-MM-dd_HH-mm-ss')

    //mandatory params for config
    axes = "SYX"
    batch_size = "64"
    patch_size = "64 64 -1"
    num_epochs = "10"
    data_type = "tiff"
    file_extension = "tiff"
    logger ="None"
    exp_name ="n2v_em"
    
   // params for the care and n2n algorithm
    nchannelsin="None"
    nchannelsout="None"
    loss="mae"

   // params for the n2v algorithm
    nchannels="None"
    roisize="11"
    maskedpixelpercentage="0.2"
    structn2vaxis="none"
    structn2vspan="5"

    //mandatory params for train
    train_target= "kk"
    val_target= "kk"
    valpercentage = "0.1"
    valminsplit="1"

    // mandatory params for test
    tile_size = "128 128 -1"
    tile_overlap = "48 48 -1"
    write_type = "tiff"
    test_axis="YX"
}

// Load base.config by default for all pipelines
includeConfig 'conf/base.config'
includeConfig 'conf/modules.config'

// Load nf-core institutional configs (uses params.custom_config_base)
includeConfig !System.getenv('NXF_OFFLINE') && params.custom_config_base ? 
    "${params.custom_config_base}/nfcore_custom.config" : "/dev/null"

// Set working directory
workDir = "${params.scratch_base}/work_nextflow"

profiles{
    conda_tier2{ 
      conda.enabled=true
      process.conda="${params.envpath}/careamics"
      }
    singularity_tier2{
        singularity.enabled= true
        singularity.autoMounts=true
        singularity.cacheDir= "${params.basepath}/.apptainer/cache"
        singularity.tmpDir = "${params.basepath}/.apptainer/tmp"
        runOptions = '''
        --containall --cleanenv --nv
    '''
    }
    singularity_tier1{
        singularity.enabled= true
        singularity.autoMounts=true
        singularity.cacheDir= "${params.basepath}/.apptainer/cache"
        singularity.tmpDir = "${params.basepath}/.apptainer/tmp"
        runOptions = '''
        --containall --cleanenv --nv
    '''
    }
    conda_wsl { 
      conda.enabled=true
      process.conda="${params.basepath_wsl}/miniconda3/envs/careamics"
      }
    apptainer_wsl{
        apptainer.enabled= true
        apptainer.autoMounts= true
        apptainer.cacheDir= '${params.basepath_wsl}/.apptainer/cache'
        apptainer.tmpDir = '${params.basepath_wsl}/.apptainer/tmp'
        containerOptions = '--nv'
    }
    docker_wsl{
        docker.enabled=true
        container="squirrel_docker:latest"
        containerOptions = '--gpus all -u $(id -u):$(id -g)'
    }
}

timeline {
    enabled = true
    file    = "${params.outdir}/pipeline_info/execution_timeline_${params.trace_report_suffix}.html"
}
report {
    enabled = true
    file    = "${params.outdir}/pipeline_info/execution_report_${params.trace_report_suffix}.html"
}
trace {
    enabled = true
    file    = "${params.outdir}/pipeline_info/execution_trace_${params.trace_report_suffix}.txt"
}
dag {
    enabled = true
    file    = "${params.outdir}/pipeline_info/pipeline_dag_${params.trace_report_suffix}.html"
}


